//- Incorporate default page layout
extends layout.pug

//- edit page title
block title
  title= "Dashboard"

//- insert page content
block content
  if msg
    if status
      div(class="msg springgreen")
        p
          span= msg
          button(id="close" class="button button-default h5" onclick="removeElement(this.parentNode)") Close
    else
      div(class="msg blueviolet")
        p
          span= msg
          button(id="close" class="button button-default h5" onclick="removeElement(this.parentNode)") Close
  .container
    .row
      div(class="col-pp-100")
        h2(class="text-center ttitle")= "Administration Dashboard"
        .row
          .col-pp-100
            h2 Sell Ticket
            form(action="/home/admin/sell" method="POST")
              div(class="form-inline row")
                div(class="form-part col-pp-20")
                  input(type="number" id="tck_num" name="tck_num" placeholder="Insert ticket num" min="1" max="1050" autofocus)
                div(class="form-part col-pp-40")
                  input(type="text" id="fname" name="fname" placeholder="Insert first name")
                div(class="form-part col-pp-40")
                  input(type="text" id="lname" name="lname" placeholder="Insert last name")
              .row
                div(class="form-part col-pp-20")
                  button(class="button button-default button-full-width h4" type="submit")= "Sell"
        .row
          .col-pp-100
            h2 Delete entrance
            form(action="/home/admin/entered/undo" method="POST")
              div(class="form-inline row")
                div(class="form-part col-pp-40")
                  input(type="number" id="tck_num" name="tck_num" placeholder="Insert ticket num" min="1" max="1050")
                div(class="form-part col-pp-40")
                  button(class="button button-default button-full-width h4" type="submit")= "Exit"
        .row
          .col-pp-100
            h2 Get the vendor
            form(action="/home/admin/ticket/vendor" method="POST")
              div(class="form-inline row")
                div(class="form-part col-pp-40")
                  input(type="number" id="tck_num" name="tck_num" placeholder="Insert ticket num" min="1" max="1050")
                div(class="form-part col-pp-40")
                  button(class="button button-default button-full-width h4" type="submit")= "Get Vendor"
        .row
          .col-pp-100
            h2 Other Actions
            a(href="/home" class="button button-outlined btn-half h4 text-center")= "Home"
            a(href="/home/tickets" class="button button-outlined btn-half h4 text-center")= "Tickets"

  script.
    function removeElement(e) {
      let elem = e;
      elem.parentNode.removeChild(elem);
    }


